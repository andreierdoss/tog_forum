<tr>
  <td><%= link_to topic.title, forum_topic_url(:forum_id => @forum.id, :id => topic.id) %></td>
  <td><%= topic.posts_count %></td>
  <td><%= link_to topic.user.login, profile_url(topic.user) %></td>
  <td><%= topic.updated_at.to_formatted_s(:db) %></td>
  <td><%= topic.rating_percent %></td>
  <td><%= link_to image_tag('/images/icons/delete.png', :border => 0, :title => "delete entire topic"), forum_topic_url(:forum_id => @forum.id, :id => topic.id), :confirm => "Are you sure?", :method => :delete %></td>
</tr>
