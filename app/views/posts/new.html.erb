<div class="titleB"><%= link_to config["plugins.tog_forum.header"], forums_url %> / Add a post</div>
<br/>
<%= error_messages_for :post %>
<% form_for :post, :url => forum_posts_url(@forum)  do |f| %>
  <fieldset>
    <div class="fields">
      <p>
        <label for="title">Title</label>
        <%= f.text_field :title, :class => "fieldbox wide" %>
      </p>
      
        <p>
          <label for="title">Body</label>
          <%= f.text_area :body, :class => "fieldbox wide" %>
        </p>
    </div>
  </fieldset>
  <div class="actions">
    <%= submit_tag 'Save post', :class => "button mainaction" %>
  </div>
<% end %>
