<div class="portlet portletB" id="edit_forum">
  <h2 class="clearfix"><span>Editing forum: <%= @forum.title %></span></h2>
  <div class="portlet_content">
    <%= error_messages_for :forum %>
    <% form_for :forum, :url => forums_path do |f| %>
      <fieldset>
        <div class="fields">
          <p>
            <label for="title">Title</label>
            <%= f.text_field :title, :class => "fieldbox wide" %>
          </p>
        </div>
      </fieldset>
      <div class="actions">
        <%= submit_tag 'Save forum', :class => "button mainaction" %>
      </div>
    <% end %>
  </div>    
</div>
