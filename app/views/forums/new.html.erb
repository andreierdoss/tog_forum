<div class="titleB"><%= link_to config["plugins.tog_forum.header"], forums_path %> / Create a new forum</div>
<br/>
<%= error_messages_for :forum %>
<% form_for :forum, :url => forums_path  do |f| %>
  <fieldset>
    <div class="fields">
      <p>
        <label for="title">Title</label>
        <%= f.text_field :title, :class => "fieldbox wide" %>
      </p>
    </div>
  </fieldset>
  <div class="actions">
    <%= submit_tag 'Save forum', :class => "button mainaction" %>
  </div>
<% end %>
